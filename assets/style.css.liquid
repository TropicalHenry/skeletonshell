/* PRODUCT */

.product {
  display: flex;
  height: 700px;
}
.product .gallery {
  flex: 3;
}
.product .info {
  flex: 2;
}
.info-container {
  width: 70%;
  margin: 8rem auto;
}


/* ⋯ PRODUCT VARIANT RADIO BUTTONS ⋯ */

.variants {
  display: flex;  
}
.variants li, .add-to-cart {
  flex: 1;
  border: 1px solid black;
  margin: 0.5rem;
  height: 30px;
  position: relative;
  outline: none; 
}
.variants li:nth-child(1) {
  margin-left: 0;
}
.variants li:last-child {
  margin-right: 0;
}
.add-to-cart {
  margin: 0.5rem 0;
  background: transparent;
  cursor: pointer;
}
.variants input, .variants label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  transition: all 200ms ease-in-out;
  cursor: pointer;
}
.variants label, .add-to-cart {
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-btn {
  display: flex;
}
.variants input[type="radio"]:checked + label {
  background: black;
  color: white;
}
.variants input[type="radio"]{
    visibility:hidden;
}

/* product-description DECRIPTION */

.description {
  width: 100%;
  margin: 2rem 0;
}
.description dl {
  display: flex;
  flex-flow: row wrap;
}
.description dt, .description dd {
  flex: 1 50%;
  padding: 1rem 0;
  border-bottom: 1px dotted silver;
}
.description dt:nth-child(1), .description dd:nth-child(2) {
  border-top: 1px dotted silver;	
}
.description dt {
  font-family: Monaco, Consolas, "Lucida Console", monospace;
}
.description dd {
  text-transform: capitalize;
}

/* ⋯ product-information.liquid ⋯ */

.information {
  width: 100%;
  position: relative;
  display: flex;
  margin-top: 4rem;
}
.underline {
  height: 1px;
  width: 33.33%;
  position: absolute;
  background: black; 
  bottom: 0; 
}
.information label {
  flex: 1;
  justify-content: center;
  align-items: center;
  display: flex;
  padding: 5px;
  height: 25px;
  cursor: pointer;
}
.information input {
  position: absolute;
}
.information input[type="radio"]{
    visibility:hidden;details
}
.delivery-tab[type="radio"]:checked ~ .underline {
  transition: all 300ms;
  left: 0;
}
.sizing-tab[type="radio"]:checked ~ .underline {
  left: 33.33%;
  transition: all 300ms;
}
.returns-tab[type="radio"]:checked ~ .underline {
  left: 66.66%;
  transition: all 300ms;
}
.delivery-details {
  width: 100%;
  height: 0;
  position: absolute;
  top: 2rem;
  left: 0;
  overflow: hidden;
}
.sizing-details {
  width: 0px;
  height: 0;
  position: absolute;
  top: 40px;
  left: 0;
  overflow: hidden;
}
.returns-details {
  width: 100%;
  height: 200px;
  position: absolute;
  top: 40px;
  left: 0;
  overflow: hidden;
}
.information input[type=radio]:checked + label + div {
  z-index: 10;
  width: 100%;
  height: 300px;
  transition: all 800ms;
}

