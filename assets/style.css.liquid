* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  text-decoration: none;
  color: black;
  font-family: arial,sans-serif;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  list-style: none;
}
html {
  margin: 0.8rem;
  font-size: 62.5%;
}
html:before, html:after {
    content: "";
    position: fixed;
    background: white;
    left: 0;
    right: 0;
    height: 10px;
}
html:before {
    top: 0;
    z-index: 9999;
}
html:after {
    bottom: 0;
}
body {
  font-size: 1.1rem;
}
/* ⋯ H E A D E R ⋯ */

header {
  display: flex;
  flex-flow: row wrap;
}
.toolbar {
  flex: 1 1px; 
  font-size: 1rem;
  display: flex;
}
.toolbar.left {
  justify-content: flex-start;
}
.toolbar.right {
  justify-content: flex-end;
}
.utilities {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.utilities.left {
  margin-left: 10%; 
}
.utilities.right {
  margin-right: 10%; 
}
.logo {
  flex: 2;
  justify-content: center;
  display: flex;
}
.logo img {
  width: 100%;
  max-width: 200px;
  max-height: 50px;
}
.utilities .text {
  padding-left: 0.4rem;
}

@media all and (max-width: 40rem) {
  .utilities {
    flex-direction: row;
    font-size: 2.2rem;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    margin: 0;
  }
  .utilities.left {
    margin: 0;
  }
  .utilities.right {
    margin: 0;
  }
  .utilities .text {
    display: none;
  }
  .fa {
    padding: 1rem;
  }
}
nav {
  flex: 100%;
  display: flex;
  justify-content: center;
}
nav li{
  display: inline-block;
  border-left: 1px solid black;
  text-align: center;
  padding: 0 30px;  
}
nav li a{

}
nav li:nth-child(1){
  border: none;
}
/* SEARCH BOX */

.search {
  display: flex;
  flex-flow: row-reverse;
  float: left;
}
.search .i {
  height: 15px;
  display: flex;
  align-items: center;
}
.search .text {
  display: flex;
  align-items: center;
}
.search .search-box {
  width: 0px;
  height: 15px;
  outline: none;
  padding: 0;
  margin: 0;
  border: 0;
}
.search .search-box:focus {
  border: 0 solid black;
  border-bottom: 1px solid slategray;
  width: 120px;
  display: block;
  transition: all 300ms ease-in-out;
  font-size: 1.2rem;
}
.search-box:focus + .text {
  display: none;
}

/* ⋯ C O L L E C T I O N ⋯ */
.grid {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
}
ul {
  list-style: none;
}
.item {
  max-width: 50%;
  padding: 0.5rem;
  display: flex;
  flex-flow: row wrap;
}
.item .picture {
  flex: 1 100%;
  position: relative;
}
.item img {
  width: 100%;
  display: block;
} 
.item .variants {
  width: 100%;
  height: 3rem;
  position: absolute;
  bottom: 0;
  height: 1rem;
  opacity: 0;
  transition: all 200ms ease-in-out;
}
.item:hover .variants {
  opacity: 1;
  height: 30%;
  transition: all 200ms ease-in-out;	
}
.item .title{
  flex: 1 1px;
}
.item .price{
  
}
@media all and (min-width: 50em) {
  .item {
    max-width: 33.33%;
  }
}
@media all and (min-width: 70em) {
  .item {
    max-width: 25%;
  }
}
@media all and (min-width: 90em) {
  .item {
    max-width: 20%;
  }
