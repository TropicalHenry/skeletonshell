/* ⋯ product-information.liquid ⋯ */

.information {
  width: 100%;
  position: relative;
  display: flex;
  margin-top: 4rem;
}
.underline {
  height: 1px;
  width: 33.33%;
  position: absolute;
  background: black; 
  bottom: 0; 
}
.information label {
  flex: 1;
  justify-content: center;
  align-items: center;
  display: flex;
  padding: 5px;
  height: 25px;
  cursor: pointer;
}
.information input {
  position: absolute;
}
.information input[type="radio"]{
    visibility:hidden;details
}
.delivery-tab[type="radio"]:checked ~ .underline {
  transition: all 300ms;
  left: 0;
}
.sizing-tab[type="radio"]:checked ~ .underline {
  left: 33.33%;
  transition: all 300ms;
}
.returns-tab[type="radio"]:checked ~ .underline {
  left: 66.66%;
  transition: all 300ms;
}
.delivery-details {
  width: 100%;
  height: 0;
  position: absolute;
  top: 2rem;
  left: 0;
  overflow: hidden;
}
.sizing-details {
  width: 0px;
  height: 0;
  position: absolute;
  top: 40px;
  left: 0;
  overflow: hidden;
}
.returns-details {
  width: 100%;
  height: 200px;
  position: absolute;
  top: 40px;
  left: 0;
  overflow: hidden;
}
.information input[type=radio]:checked + label + div {
  z-index: 10;
  width: 100%;
  height: 300px;
  transition: all 800ms;
}

