/* ⋯ PRODUCT VARIANT RADIO BUTTONS ⋯ */

.variants {
  display: flex;  
}
.variants li, .add-to-cart {
  flex: 1;
  border: 1px solid black;
  margin: 0.5rem;
  height: 30px;
  position: relative;
  outline: none; 
}
.variants li:nth-child(1) {
  margin-left: 0;
}
.variants li:last-child {
  margin-right: 0;
}
.add-to-cart {
  margin: 0.5rem 0;
  background: transparent;
  cursor: pointer;
}
.variants input, .variants label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  transition: all 200ms ease-in-out;
  cursor: pointer;
}
.variants label, .add-to-cart {
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-btn {
  display: flex;
}
.variants input[type="radio"]:checked + label {
  background: black;
  color: white;
}
.variants input[type="radio"]{
    visibility:hidden;
}

